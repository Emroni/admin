{% extends 'base.html.twig' %}

{% set title = client.name %}

{% block content %}
	{% embed 'partials/card.html.twig' %}
		{% block actions %}
            {% include 'partials/link.html.twig' with {name:'Edit', path:path('client_edit', {id:client.id})} %}
		{% endblock %}
		{% block body %}
			<table class="table table-sm table-hover">
				<tbody>
					<tr>
						<th>Name</th>
						<td>{{ client.name }}</td>
					</tr>
					<tr>
						<th>Email</th>
						<td>
                            <a href="mailto:{{ client.email }}">{{ client.email }}</a>
                        </td>
					</tr>
					<tr>
						<th>Address</th>
						<td>{{ client.address }}</td>
					</tr>
					<tr>
						<th>Invoices</th>
						<td>{{ client.invoices|length }}</td>
					</tr>
					<tr>
						<th>Projects</th>
						<td>{{ client.projects|length }}</td>
					</tr>
				</tbody>
			</table>
		{% endblock %}
	{% endembed %}

    {% include 'project/list-table.html.twig' with {projects:client.projects} %}
    {% include 'invoice/list-table.html.twig' with {invoices:client.invoices} %}
{% endblock %}
