{% extends 'base.html.twig' %}

{% set title = 'Invoices' %}

{% block content %}
    {% embed 'partials/card.html.twig' with {title:invoices|length ~ ' Invoices'} %}
        {% block actions %}
            {% include 'partials/link.html.twig' with {name:'Add', path:path('invoice_add')} %}
        {% endblock %}
        {% block body %}
            <table class="table table-sm table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th>Name</th>
                        <th>Client</th>
                        <th>Projects</th>
                        <th>Type</th>
                        <th>Currency</th>
                        <th>Amount</th>
                        <th>Sent Date</th>
                        <th>Paid Date</th>
                    </tr>
                </thead>
                <tbody>
                    {% for invoice in invoices %}
                        <tr data-link="{{ path('invoice_view', {id:invoice.id}) }}">
							<td>
								<span class="bg-{{ invoice.paidDate ? 'success' : 'primary' }} d-inline-block p-1 rounded"></span>
							</td>
                            <td>{{ invoice.name }}</td>
                            <td>
                                <a href="{{ path('client_view', {id:invoice.client.id}) }}">{{ invoice.client.name }}</a>
                            </td>
                            <td>
                                {% for project in invoice.projects %}
                                    <a href="{{ path('project_view', {id:project.id}) }}">{{ project.name }}</a>
                                {% endfor %}
                            </td>
                            <td>{{ invoice.type }}</td>
                            <td>{{ invoice.currency }}</td>
                            <td>{{ invoice.amount }}</td>
                            <td>{{ invoice.sentDate|date('Y-m-d') }}</td>
                            <td>{{ invoice.paidDate ? invoice.paidDate|date('Y-m-d') : '' }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endblock %}
    {% endembed %}
{% endblock %}
