{% extends 'base.html.twig' %}

{% set title = project.name %}

{% block content %}
	{% embed 'partials/card.html.twig' %}
		{% block actions %}
            {% include 'partials/link.html.twig' with {name:'Edit', path:path('project_edit', {id:project.id})} %}
		{% endblock %}
		{% block body %}
			<table class="table table-sm table-hover">
				<tbody>
					<tr>
						<th>Name</th>
						<td>{{ project.name }}</td>
					</tr>
					<tr>
						<th>Client</th>
						<td>
                            <a href="{{ path('client_view', {id:project.client.id}) }}">{{ project.client.name }}</a>
                        </td>
					</tr>
					<tr>
						<th>Tasks</th>
						<td>{{ project.tasks|length }}</td>
					</tr>
					<tr>
						<th>Invoices</th>
						<td>{{ project.invoices|length }}</td>
					</tr>
				</tbody>
			</table>
		{% endblock %}
	{% endembed %}

    {% include 'task/list-table.html.twig' with {tasks:project.tasks} %}
    {% include 'invoice/list-table.html.twig' with {invoices:project.invoices} %}
{% endblock %}
