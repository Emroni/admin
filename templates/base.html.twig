            {% include 'partials/nav.html.twig' %}
			<main class="d-grid gap-3 p-3 gap-md-4 p-md-4 gap-lg-5 p-lg-5">
                {% include 'partials/notifications.html.twig' %}
				{% block content %}{% endblock %}
			</main>
		{% endblock %}
	</body>
