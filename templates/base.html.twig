		<title>{{ title is defined ? (title ~ ' - ') : '' }}Admin</title>
		<link href="/assets/bootstrap.min.css" rel="stylesheet">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body class="bg-light">
