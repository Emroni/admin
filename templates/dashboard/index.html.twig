{% extends 'base.html.twig' %}

{% block content %}
    {% embed 'partials/card.html.twig' with {title:awaitingInvoices|length ~ ' Invoices'} %}
        {% block body %}
            <table class="table table-sm table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Projects</th>
                        <th>Number</th>
                        <th>Type</th>
                        <th>Currency</th>
                        <th>Amount</th>
                        <th>Sent Date</th>
                    </tr>
                </thead>
                <tbody>
                    {% for invoice in awaitingInvoices %}
                        <tr data-link="{{ path('invoice_view', {id:invoice.id}) }}">
                            <td>{{ invoice.name }}</td>
                            <td>
                                {% for project in invoice.projects %}
                                    <a href="{{ path('project_view', {id:project.id}) }}">{{ project.name }}</a>
                                {% endfor %}
                            </td>
                            <td>{{ invoice.number }}</td>
                            <td>{{ invoice.type }}</td>
                            <td>{{ invoice.currency }}</td>
                            <td>{{ invoice.amount }}</td>
                            <td>{{ invoice.sentDate|date('Y-m-d') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endblock %}
    {% endembed %}
{% endblock %}
